
<div class="row">
    <div class="col">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                @if (this.GetActionName() == "Index")
                {
                    <li class="breadcrumb-item active" aria-current="page">
                        User Control Panel
                    </li>
                }
                else
                {
                    <li class="breadcrumb-item">
                        <a asp-action="Index">User Control Panel</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        @ViewBag.PageName
                    </li>
                }
            </ol>
        </nav>
    </div>
</div>