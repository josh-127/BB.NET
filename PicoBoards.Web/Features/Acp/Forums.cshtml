@model CategoryListingCollection

<h1>Forums | Admin Control Panel</h1>

@Html.ValidationSummary()

@await Html.PartialAsync("_AddCategory", new AddCategoryForm())

@foreach (var listing in Model)
{
    <div>
        <h2>@listing.Name</h2>
        <a asp-action="EditCategory" asp-route-id="@listing.CategoryId" method="post">
            (edit)
        </a>
        <form asp-action="RemoveCategory" asp-route-id="@listing.CategoryId" method="post">
            <button type="submit">(remove)</button>
        </form>
    </div>
}